<Window x:Class="Assignment_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_3"
        mc:Ignorable="d"
        Title="Minesweeper" Height="450" Width="400">
    <Grid>
        <StackPanel Name="myArea" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel Name="hud">
                <Label Margin="10" Name="difficulty">Difficulty: </Label>
                <Label Margin="10" Name="remainingBombs">Bombs: </Label>
                <Label Margin="10" Name="timer"></Label>
                <Button Padding="5" Margin="10" Name="reset" Click="reset_Click">Reset</Button>
                <Button Padding="5" Margin="10" Name="hint" Click="hint_Click">Hint</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
